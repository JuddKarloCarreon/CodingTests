main {
    padding: 0px;
}
h1 {
    font-size: 5em;
}
h3 {
    font-size: 2em;
}
#primary {
    background-image: url(<%= asset_path('landing_main.jpg') %>);
    background-size: 100vw 100vh;              
    background-repeat: no-repeat;
    background-position: center center; 
    height: 100vh;
    padding: 0px;
}
#gradient {
    background: linear-gradient(90deg, rgba(255,255,255,0.6) 0%, rgba(0,0,0,0) 80%);
    height: 100%;
    width: 100%;
    color: rgb(25,25,25);
}
#primary_content {
    width: 45vw;
    padding-left: 5vw;
}
#primary_content h1 {
    padding-top: 23vh;
    text-align: center;
}
#primary_content h3 {
    padding-top: 2vh;
    padding-left: 1vw;
    text-align: center;
}
#primary_content div > a {
    display: block;
    margin-inline: auto;
    width: max-content;
    text-decoration: none;
    color: black;
    padding: 10px 20px;
    border: 1px solid black;
    border-radius: 50px;
    background-color: rgba(255,255,255,0.6);
}
#primary_content div:has(a) {
    margin-top: 5vh;
    font-size: 1.3em;
}