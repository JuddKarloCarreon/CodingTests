<% content_for :title, "Solution" %>
<% content_for :stylesheets do %>
    <%= stylesheet_link_tag "primary", "slide", "problem_solve" %>
<% end %>
<% content_for :javascripts do %>
<% unless @solution.blank? %>
    <script type="text/javascript">
        let record = JSON.parse(<%= @solution.recording.to_json.html_safe %>);
    </script>
<% end %>
    <%= javascript_include_tag "slide" %>
<% end %>

<%= render partial: "shared/header" %>
<main>
    <aside>
        <div id="problems">
            <h2>Problems:</h1>
            <%= render partial: "shared/problems_list" %>
        </div>
        <div id="solutions">
            <h2>Solutions from other users:</h2>
            <%= render partial: "shared/other_solutions" %>
        </div>
    </aside>
    <%= render partial: "shared/recording", locals: { h1_text: "Solution by #{@watching.username}" } %>
</main>